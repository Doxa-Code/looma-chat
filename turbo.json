{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "stream",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "deploy:broker": {
      "cache": false,
      "persistent": true
    },
    "dev:broker": {
      "cache": false,
      "persistent": true
    },
    "remove:broker": {
      "cache": false,
      "persistent": true
    },
    "deploy:remove:broker": {
      "cache": false,
      "persistent": true
    },

    "deploy:ai": {
      "cache": false,
      "persistent": true
    },
    "dev:ai": {
      "cache": false,
      "persistent": true
    },
    "remove:ai": {
      "cache": false,
      "persistent": true
    },
    "deploy:remove:ai": {
      "cache": false,
      "persistent": true
    },
    "mastra:dev": {
      "cache": false,
      "persistent": false
    },
    "db:generate:token": {
      "cache": false,
      "persistent": true
    },
    "send:event:broker": {
      "cache": false,
      "persistent": true
    },
    "db:generate": {
      "cache": false,
      "persistent": true
    },
    "db:migrate": {
      "cache": false,
      "persistent": true
    },
    "db:seed": {
      "cache": false,
      "persistent": true
    }
  }
}
